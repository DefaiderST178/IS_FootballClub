<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="MainBack">DimGray</Color>
    <Color x:Key="MainWhite">Ivory</Color>
    <Color x:Key="LightGrey">khaki</Color>
    <Color x:Key="DarkGrey">Darkkhaki</Color>

    <SolidColorBrush x:Key="BackGroundColor" Color="{StaticResource MainBack}"/>
    <SolidColorBrush x:Key="StackColor" Color="{StaticResource MainWhite}"/>
    <SolidColorBrush x:Key="ButtonsColor" Color="{StaticResource LightGrey}"/>
    <SolidColorBrush x:Key="ExitButtonColor" Color="{StaticResource DarkGrey}"/>
    
</ResourceDictionary>